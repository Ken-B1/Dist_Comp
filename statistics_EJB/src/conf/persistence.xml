    <jta-data-source>jdbc/sample</jta-data-source>
    <class>Entities.Account</class>
    <class>Entities.Adminactions</class>
    <class>Entities.Board</class>
    <class>Entities.Boardfollowers</class>
    <class>Entities.Categories</class>
    <class>Entities.Messages</class>
    <class>Entities.Notifications</class>
    <class>Entities.Peoplefollower</class>
    <class>Entities.Pin</class>
    <class>Entities.Statistics</class>
    <class>Entities.Useractions</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
