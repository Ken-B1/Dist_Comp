<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UInterface.Views.RegisterPage"
             xmlns:ViewModels="UInterface:UInterface, UInterface.Views, assembly = UInterface "> >

    <ContentPage.BindingContext>
     <ViewModels:RegisterViewModels/>
    </ContentPage.BindingContext>

    <StackLayout Orientation="Vertical">
        <Entry Text="{Binding Username}" 
               Placeholder="username"/>
        <Entry Text="{Binding password}" 
               Placeholder="password" 
               IsPassword="True"/>
        <Entry Text="{Binding Confirm_Password}" 
               Placeholder="Confirm_Password" 
               IsPassword="True"/>

        <Button Text="Register" Clicked="RegisterCommand"/>

    </StackLayout>
</ContentPage>